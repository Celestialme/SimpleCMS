{
	"name": "sveltycms",
	"description": "A powerful Headless CMS with sveltekit power",
	"version": "0.0.4",
	"scripts": {
		"---- DEVELOP ----------------------------------------------------------": "",
		"dev": "vite dev",
		"devv": "LAUNCH_EDITOR='code' vite --open",
		"inlang": "paraglide-js compile --project ./project.inlang",
		"---- BUILD ----------------------------------------------------------": "",
		"build": "paraglide-js compile --project ./project.inlang && vite build",
		"---- CHECK & TEST ----------------------------------------------------------": "",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "paraglide-js compile && playwright test",
		"test:e2e": "pnpm dev & pnpx wait-on http://localhost:5173 && playwright test",
		"---- LINT & FORMAT ------------------------------------------------------------": "",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"---- OTHER ----------------------------------------------------------": "",
		"preview": "vite preview",
		"postinstall": "pnpm run inlang"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Rar9/SveltyCMS"
	},
	"bugs": {
		"url": "https://github.com/Rar9/SveltyCMS/issues"
	},
	"keywords": [
		"cms",
		"content-management-system",
		"inlang",
		"i18n",
		"internationalization",
		"paraglide-js",
		"headless",
		"headless-cms",
		"skeleton",
		"svelte",
		"svelte-cms",
		"sveltekit",
		"sveltekit_cms",
		"sveltycms",
		"tailwind",
		"tailwindcss",
		"rich-text-editor",
		"lexical-editor",
		"mongodb"
	],
	"devDependencies": {
		"@inlang/paraglide-js": "^1.2.5",
		"@sveltejs/adapter-node": "^4.0.1",
		"@sveltejs/kit": "^2.5.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.2",
		"@types/mime-types": "^2.1.4",
		"autoprefixer": "^10.4.17",
		"postcss": "^8.4.35",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.5.11",
		"svelte": "^4.2.10",
		"svelte-check": "^3.6.4",
		"tailwindcss": "^3.4.1",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"vite": "^5.1.1",
		"vite-plugin-tailwind-purgecss": "^0.2.0",
		"zod": "^3.22.4"
	},
	"type": "module",
	"dependencies": {
		"@iconify/svelte": "^3.1.6",
		"axios": "^1.6.7",
		"buffer": "^6.0.3",
		"deepmerge": "^4.3.1",
		"graphql": "^16.8.1",
		"graphql-yoga": "^5.1.1",
		"iconify-icon": "^2.0.0",
		"mime-types": "^2.1.35",
		"mongoose": "^8.1.1",
		"nodemailer": "^6.9.9",
		"serve-static": "^1.15.0",
		"sharp": "^0.33.2",
		"svelty-email": "^0.0.7",
		"tailwind-merge": "^2.2.1"
	}
}
