{
	"name": "SimpleCMS",
	"version": "0.0.2",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"dev-i18n": "npm-run-all --parallel dev typesafe-i18n",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check .",
		"format": "prettier --plugin-search-dir . --write .",
		"typesafe-i18n": "typesafe-i18n",
		"start": "npm run dev",
		"stop": "npx kill-port 5173"
	},
	"devDependencies": {
		"@skeletonlabs/skeleton": "^0.99.5",
		"@sveltejs/adapter-auto": "^1.0.2",
		"@sveltejs/kit": "^1.2.9",
		"autoprefixer": "^10.4.13",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.21",
		"prettier": "^2.8.3",
		"prettier-plugin-svelte": "^2.9.0",
		"svelte": "^3.55.1",
		"svelte-check": "^3.0.3",
		"svelte-preprocess": "^5.0.1",
		"tailwindcss": "^3.2.4",
		"tslib": "^2.4.1",
		"typescript": "^4.9.4",
		"vite": "^4.0.4"
	},
	"type": "module",
	"dependencies": {
		"@iconify/svelte": "^3.0.1",
		"@lucia-auth/adapter-mongoose": "^0.2.1",
		"@lucia-auth/sveltekit": "^0.5.2",
		"@mapbox/mapbox-gl-geocoder": "^5.0.1",
		"@mapbox/mapbox-gl-language": "^1.0.1",
		"axios": "^1.2.4",
		"dayjs": "^1.11.7",
		"flag-icons": "^6.6.6",
		"google-maps": "^4.3.3",
		"lucia-auth": "^0.4.3",
		"mapbox-gl": "^2.12.0",
		"mongoose": "^6.8.4",
		"svelte-lexical": "^0.1.7",
		"svelte-tel-input": "^1.1.2",
		"typesafe-i18n": "^5.20.0"
	}
}
