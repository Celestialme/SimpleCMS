{
	"name": "SimpleCMS",
	"version": "0.0.2",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"dev-i18n": "npm-run-all --parallel dev  typesafe-i18  server",
		"server": "node -r tsconfig-paths/register --experimental-specifier-resolution=node --loader ./loader.js ./server.ts",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"typesafe-i18": "typesafe-i18n",
		"start": "npm run dev & node -r tsconfig-paths/register --experimental-specifier-resolution=node --loader ./loader.js ./server.ts",
		"stop": "npx kill-port 5173 & npx kill-port 3501"
	},
	"devDependencies": {
		"@beyonk/svelte-mapbox": "^8.2.0",
		"@playwright/test": "^1.29.2",
		"@popperjs/core": "^2.11.6",
		"@skeletonlabs/skeleton": "0.86.9",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/adapter-node": "^1.1.3",
		"@sveltejs/kit": "next",
		"@tailwindcss/forms": "^0.5.3",
		"@tailwindcss/line-clamp": "^0.4.2",
		"@tailwindcss/typography": "^0.5.9",
		"@types/cookie": "^0.5.1",
		"@types/cookie-parser": "^1.4.3",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.15",
		"@types/multer": "^1.4.7",
		"@typescript-eslint/eslint-plugin": "^5.48.2",
		"@typescript-eslint/parser": "^5.48.2",
		"autoprefixer": "^10.4.13",
		"classnames": "^2.3.2",
		"eslint": "^8.32.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"madge": "^5.0.1",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.21",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.8.3",
		"prettier-plugin-svelte": "^2.9.0",
		"prettier-plugin-tailwindcss": "^0.2.1",
		"svelte": "^3.55.1",
		"svelte-check": "^3.0.2",
		"svelte-preprocess": "^5.0.0",
		"tailwindcss": "^3.2.4",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.1.2",
		"tslib": "^2.4.1",
		"typescript": "^4.9.4",
		"vite": "^4.0.4"
	},
	"type": "module",
	"dependencies": {
		"@iconify/svelte": "^3.0.1",
		"@lucia-auth/adapter-mongoose": "^0.2.1",
		"@mapbox/mapbox-gl-geocoder": "^5.0.1",
		"@mapbox/mapbox-gl-language": "^1.0.1",
		"axios": "^1.2.2",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dayjs": "^1.11.7",
		"express": "^4.18.2",
		"flag-icons": "^6.6.6",
		"google-maps": "^4.3.3",
		"lucia-auth": "^0.4.3",
		"mapbox-gl": "^2.12.0",
		"mongoose": "^6.8.3",
		"multer": "^1.4.5-lts.1",
		"svelecte": "^3.13.2",
		"svelte-lexical": "^0.1.6",
		"svelte-tel-input": "^1.1.1",
		"typesafe-i18n": "^5.19.1"
	}
}
