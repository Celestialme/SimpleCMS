{
	"name": "SimpleCMS",
	"version": "0.0.2",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"server": "node --experimental-specifier-resolution=node --loader ts-node/esm ./server.ts",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"typesafe-i18n": "typesafe-i18n",

		"start": "npm run dev -- --host & node --experimental-specifier-resolution=node --loader ts-node/esm ./server.ts",
		"stop": "npx kill-port 5173 & npx kill-port 3501"
	},
	"devDependencies": {
		"@beyonk/svelte-mapbox": "^8.2.0",
		"@playwright/test": "^1.28.1",
		"@popperjs/core": "^2.11.6",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/kit": "next",
		"@types/cookie": "^0.5.1",
		"@types/cookie-parser": "^1.4.3",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.14",
		"@types/multer": "^1.4.7",
		"@typescript-eslint/eslint-plugin": "^5.46.0",
		"@typescript-eslint/parser": "^5.46.0",
		"autoprefixer": "^10.4.13",
		"classnames": "^2.3.2",
		"eslint": "^8.29.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"flowbite": "^1.5.5",
		"flowbite-svelte": "^0.28.11",
		"postcss": "^8.4.19",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.8.1",
		"prettier-plugin-svelte": "^2.9.0",
		"svelte": "^3.54.0",
		"svelte-check": "^2.10.2",
		"svelte-preprocess": "^5.0.0",
		"tailwindcss": "^3.2.4",
		"ts-node": "^10.9.1",
		"tslib": "^2.4.1",
		"typescript": "^4.9.4",
		"vite": "^4.0.0"
	},
	"type": "module",
	"dependencies": {
		"@iconify/svelte": "^3.0.1",
		"@lucia-auth/adapter-mongoose": "^0.1.5",
		"axios": "^1.2.1",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"express": "^4.18.2",
		"lucia-auth": "^0.3.0",
		"mongoose": "^6.8.0",
		"multer": "^1.4.5-lts.1",
		"svelte-lexical": "^0.1.3",
		"typesafe-i18n": "^5.17.1",
		"filepond": "^4.30.4",
		"filepond-plugin-image-exif-orientation": "^1.0.11",
		"filepond-plugin-image-preview": "^4.6.11",
		"svelte-filepond": "^0.2.0"
	}
}
